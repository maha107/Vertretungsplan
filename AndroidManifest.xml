<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vertretungsplan"
    android:versionCode="1"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.vertretungsplan.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.vertretungsplan.Anzeige"
            android:label="@string/title_activity_anzeige" android:screenOrientation="unspecified" android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:name="com.example.vertretungsplan.Options"
            android:label="@string/title_activity_options" >
        </activity>
        <activity
            android:name="com.example.vertretungsplan.Credits"
            android:label="@string/title_activity_credits" >
        </activity>
    </application>

</manifest>