<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.maxgb.vertretungsplan"
    android:versionCode="9"
    android:versionName="1.6.3" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Sherlock.__Theme.DarkActionBar" >
        <activity
            android:name="de.maxgb.vertretungsplan.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.maxgb.vertretungsplan.Anzeige"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_anzeige"
            android:screenOrientation="unspecified" >
        </activity>
        <activity
            android:name="de.maxgb.vertretungsplan.Options"
            android:label="@string/title_activity_options" 
            android:parentActivityName="de.maxgb.vertretungsplan.Options" >
        	<!-- Parent activity meta-data to support 4.0 and lower -->
        	<meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="de.maxgb.vertretungsplan.Options" />
            >
        </activity>
        <activity
            android:name="de.maxgb.vertretungsplan.Credits"
            android:label="@string/title_activity_credits" >
        </activity>
        <activity
            android:name="de.maxgb.vertretungsplan.Kurswahl"
            android:label="@string/title_activity_kurswahl" >
        </activity>
        <activity
            android:name="de.maxgb.vertretungsplan.Anzeigen"
            android:label="@string/title_activity_anzeigen" >
        </activity>
    </application>

</manifest>